:php
    $params = $item->params;
    JHtml::addIncludePath(JPATH_COMPONENT . '/helpers/html');
    $canEdit = $item->params->get('access-edit');
    $info    = $params->get('info_block_position', 0);

    $useDefList = ($params->get('show_modify_date') || $params->get('show_publish_date') || $params->get('show_create_date')
    || $params->get('show_hits') || $params->get('show_category') || $params->get('show_parent_category') || $params->get('show_author'));

= JLayoutHelper::render('joomla.content.blog_style_default_item_title', $item)

- if ($canEdit || $params->get('show_print_icon') || $params->get('show_email_icon'))
    = JLayoutHelper::render('joomla.content.icons', array('params' => $params, 'item' => $item, 'print' => false))

- if ($params->get('show_tags') && !empty($item->tags->itemTags))
    = JLayoutHelper::render('joomla.content.tags', $item->tags->itemTags)


- if ($useDefList && ($info == 0 || $info == 2))
    = JLayoutHelper::render('joomla.content.info_block.block', array('item' => $item, 'params' => $params, 'position' => 'above'))

= JLayoutHelper::render('joomla.content.intro_image', $item)

- if (!$params->get('show_intro'))
    = $item->event->afterDisplayTitle

= $item->event->beforeDisplayContent
= $item->introtext

- if ($useDefList && ($info == 1 || $info == 2))
    = JLayoutHelper::render('joomla.content.info_block.block', array('item' => $item, 'params' => $params, 'position' => 'below'))


- if ($params->get('show_readmore') && $item->readmore)
    - if ($params->get('access-view'))
        - $link = JRoute::_(ContentHelperRoute::getArticleRoute($item->slug, $item->catid, $item->language))
    - else
        :php
            $menu = JFactory::getApplication()->getMenu();
            $active = $menu->getActive();
            $itemId = $active->id;
            $link1 = JRoute::_('index.php?option=com_users&view=login&Itemid=' . $itemId);
            $returnURL = JRoute::_(ContentHelperRoute::getArticleRoute($item->slug, $item->catid, $item->language));
            $link = new JUri($link1);
            $link->setVar('return', base64_encode($returnURL));

    = JLayoutHelper::render('joomla.content.readmore', array('item' => $item, 'params' => $params, 'link' => $link))

= $item->event->afterDisplayContent
